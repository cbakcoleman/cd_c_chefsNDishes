

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Dishes</title>
</head>
<body>
    <div class="container p-3"> <!-- BEGIN WHOLE PAGE CONTAINER -->
        <div class="row"> <!-- BEGIN HEADER ROW -->
            <div class="col">
                <h3><a href="/">CHEFS </a> | DISHES</h3>
            </div>
            <div class="col">
                <h4><a href="/dish/add">Add a Dish</a></h4>
            </div>
        </div> <!-- END HEADER ROW -->

        <div class="row"> <!-- BEGIN MAIN BODY ROW -->
            <h4>Yummy Yummy Yummy we got dishes in our Tummy!!</h4>
            <table>
                <tr>
                    <td>Name</td>
                    <td>Chef</td>
                    <td>Tastiness</td>
                    <td>Calories</td>
                </tr>
                @{
                    foreach (var d in ViewBag.AllDishes)
                    {
                        <tr>
                            <td>@d.DishName</td>
                            <td>@d.Creator.FirstName @d.Creator.LastName<td>
                            <td>@d.Tastiness</td>
                            <td>@d.Calories</td>
                        </tr>
                    }
                }
            </table>
        </div> <!-- END MAIN BODY ROW -->

    </div> <!-- END WHOLE PAGE CONTAINER -->
</body>
</html>