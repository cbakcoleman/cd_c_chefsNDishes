@model cd_c_chefsNDishes.Models.Chef

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <title>Add Chef</title>
</head>
<body>
    <div class="container"> <!-- BEGIN WHOLE PAGE CONTAINER -->
        <div class="row"> <!-- BEGIN HEADER ROW -->
            <div class="col">
                <h4>Add a Chef!</h4>
            </div>
            <div class="col">
                <a href="/">Home</a>
            </div>
        </div> <!-- END HEADER ROW -->

        <div class="row"> <!-- BEGIN FORM ROW -->
            <form asp-action="thischefadd" asp-controller="home" class="form-group">
                <div class="col m-1 card p-3">
                    <div class="row">
                        <div class="col"> <!-- BEGIN FORM COL 1/2 -->
                            <div>
                                <span asp-validation-for="FirstName"></span>
                            </div>
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" class="form-control">

                            <div>
                                <span asp-validation-for="LastName"></span>
                            </div>
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" class="form-control">
                        </div> <!-- END FORM COL 1/2 -->

                        <div class="col"> <!-- BEGIN FORM COL 2/2 -->
                            <div>
                                <span asp-validation-for="BirthDate"></span>
                            </div>
                            <label asp-for="BirthDate"></label>
                            <input asp-for="BirthDate" class="form-control">

                            <input class="mt-3" type="submit" value="Add Chef">

                        </div> <!-- END FORM COL 2/2 -->
                    </div>
                </div>
            </form>
        </div> <!-- END FORM ROW -->

    </div> <!-- BEGIN WHOLE PAGE CONTAINER -->
</body>
</html>